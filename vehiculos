class Vehiculo {
    constructor(public marca: string, public modelo: string, public anio: number) {}

    detalles(): string {
        return `${this.marca} ${this.modelo}, Año: ${this.anio}`;
    }

    iniciarViaje(destino: string): string {
        return `El vehículo ${this.marca} ${this.modelo} inició un viaje hacia ${destino}.`;
    }
}

class Coche extends Vehiculo {
    constructor(marca: string, modelo: string, anio: number, public puertas: number) {
        super(marca, modelo, anio);
    }

    detalles(): string {
        return `Coche: ${super.detalles()}, Puertas: ${this.puertas}`;
    }
}

class Moto extends Vehiculo {
    constructor(marca: string, modelo: string, anio: number, public tipo: string, public sidecar: boolean = false) {
        super(marca, modelo, anio);
        this.sidecar = tipo.toLowerCase() === "custom";
    }

    detalles(): string {
        return `Moto: ${super.detalles()}, Tipo: ${this.tipo}, Sidecar: ${this.sidecar ? "Sí" : "No"}`;
    }
}

abstract class Empleado {
    constructor(public nombre: string, public salario: number) {}

    abstract calcularBono(): number;

    detalles(): string {
        return `Empleado: ${this.nombre}, Salario: $${this.salario}`;
    }
}

class Conductor extends Empleado {
    constructor(nombre: string, salario: number, public licencia: string) {
        super(nombre, salario);
    }

    calcularBono(): number {
        return this.salario * 0.10;
    }

    detalles(): string {
        return `${super.detalles()}, Rol: Conductor, Licencia: ${this.licencia}`;
    }
}

class Mecanico extends Empleado {
    constructor(nombre: string, salario: number, public especialidad: string) {
        super(nombre, salario);
    }

    calcularBono(): number {
        return this.salario * 0.05;
    }

    detalles(): string {
        return `${super.detalles()}, Rol: Mecánico, Especialidad: ${this.especialidad}`;
    }
}

const miCoche = new Coche("Toyota", "Corolla", 2020, 4);
const miMoto = new Moto("Harley-Davidson", "Street 750", 2019, "Custom");

console.log(miCoche.detalles());
console.log(miMoto.detalles());

console.log(miCoche.iniciarViaje("Playa"));
console.log(miMoto.iniciarViaje("Montaña"));

const empleado1 = new Conductor("Juan Pérez", 3000, "B2");
const empleado2 = new Mecanico("Ana Gómez", 3500, "Motores");

console.log(empleado1.detalles());
console.log(empleado2.detalles());

console.log(`Bono de ${empleado1.nombre}: $${empleado1.calcularBono()}`);
console.log(`Bono de ${empleado2.nombre}: $${empleado2.calcularBono()}`);
